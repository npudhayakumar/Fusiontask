<?xml version="1.0" encoding="utf-8"?>

                                                       

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/White"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical" android:tag="layout/fragment_login_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="vertical">
            <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                android:src="@drawable/ic_logo"
                    />

            <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    style="@style/headertextt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:letterSpacing="0.2"
                    android:text="Login to your account"
                    android:textSize="@dimen/_18sdp" />

            <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/cornerbackground"
                    android:backgroundTint="@color/colorAccent"
                    android:hint="Enter your emailid"
                    android:padding="@dimen/_10sdp" />

            <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/cornerbackground"
                    android:backgroundTint="@color/colorAccent"
                    android:hint="enter your password"
                    android:inputType="numberPassword"
                    android:padding="@dimen/_10sdp" />

            <Button
                    android:id="@+id/loginbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/cornerbackground"
                    android:padding="@dimen/_10sdp"
                    android:text="Login" />


        </LinearLayout>


    </LinearLayout>
         